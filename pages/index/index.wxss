.swiper{
  width:750rpx;
  height:370rpx;
}
.swiper image{
  width:100%;
  height:370rpx;
}
.grid{
  width:750rpx;
  display: flex;
  flex-wrap: wrap;
  align-content: center;
  justify-content: flex-start;
}
.grid-content{
  width:20%;
  flex-shrink: 0;
  text-align: center;
  font-size:12px;
  color:#333;
}
.grid-content image{
  width:100rpx;
  margin:10px auto;
  height:100rpx;
  display: block;
}
.loading{
  width:80px;
  height:80px;
  display: block;
  margin:5px auto;
}