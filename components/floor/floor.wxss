/* components/floor/floor.wxss */
.floor-top{
  height:80rpx;
  display: flex;
  padding:0 15px;
  justify-content: space-between;
  align-items: center;
}
.floor-top image{
  width:80rpx;
  height:80rpx;
}
.floor-main{
  display: flex;
  flex-wrap: wrap;
  align-content: center;
  padding:0 5px;
  justify-content: space-between;
}
.item{
  width:45%;
  text-align: center;
}
.item image{
  width:100%;
  margin:8px 0;
}
.item-name{
  font-size:12px;
  color:#666;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.price{
  line-height:80rpx;
  font-size:14px;
  display: flex;
  padding:0 5px;
  justify-content: space-between;
}
.old-price{
  font-size:12px;
  color:#999;
  text-decoration: line-through;
}
.now-price{
  color:#e31200;
}